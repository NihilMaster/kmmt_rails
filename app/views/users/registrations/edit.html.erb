<div style="width:100%; display: flex; justify-content: center;">
  <div class="card border-primary" style="width:50%; padding:10px; ">
    <h2>Edit <%= resource_name.to_s.humanize %></h2><!-- Modificar cuenta -->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="">
      <label class="form-label mt-4"><%= f.label :email %></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control'%>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="">
      <label class="form-label mt-4"><%= f.label :password %></label>
      <i>(leave blank if you don't want to change it)</i><br/>
      <%= f.password_field :password, autocomplete: "new-password", class:'form-control'%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
    </div>

    <div class="">
      <label class="form-label mt-4"><%= f.label :password_confirmation %></label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control'%>
    </div>

    <div class="">
      <label class="form-label mt-4"><%= f.label :current_password %></label>
      <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control'%>
    </div>

    <div class="" style="padding-top:10px">
      <%= f.submit "Update", :class => 'btn btn-outline-primary' %>
    </div>
    <% end %>

    <hr style="margin:25px">
    <div>
      <h3>Cancel my account</h3>
      <p class="text-warning">Unhappy?</p>
      <div style="width:100%; display: flex;">
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-outline-danger', :style =>'margin:5px' %>
        <%= link_to "Back", :back, :class => 'btn btn-outline-secondary', :style =>'margin:5px' %>
      </div>
    </div>
  </div>
</div>
