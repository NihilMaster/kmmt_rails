<!DOCTYPE html>
<html>
  <head>
    <title>Article-nation</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-5">
            <a class="navbar-brand" href="<%= root_path(@article)%>">Articles Blog</a>
        </div>
    </nav>
    <div style="padding:10px">
      <div class="border-success" style="width:100%; display: flex; justify-content: flex-end;">
        <% if user_signed_in? %>
          <p class="text-muted" style="margin:10px"> Logged in as <strong><%= current_user.email %></strong>Â <p>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'btn btn-outline-warning', :style => 'margin:5px' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-outline-danger', :style => 'margin:5px' %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-outline-primary', :style => 'margin:5px'%> 
          <%= link_to "Login", new_user_session_path, :class => 'btn btn-outline-success', :style => 'margin:5px'%>
        <% end %>
      </div>
    </div>

    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div style="padding:10px"><%= yield %></div>
  </body>
</html>
