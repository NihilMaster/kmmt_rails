<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

<!-- Nav Show-->
<nav class="navbar navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="<%= root_path(@article) %>">
      <img src="https://rubyonrails.org/images/rails-logo.svg" alt="" width="30" height="24" class="d-inline-block align-text-top">
      Rails Path - Articles and Comments!
    </a>
  </div>
</nav>
<!-- Nav Show-->

<!-- Form Show-->
<div class="card" style="padding 10px; margin:10px">
  <div class="card" style="padding 5px; margin:5px">
    <h4 style="padding:5px"><%= @article.title %></h4>
  </div>
  <div class="card" style="padding 5px; margin:5px">
    <p style="padding:5px"><%= @article.body %></p>
  </div>
  <div style="padding 5px; display: flex; justify-content: flex-end; width: 100%; margin:5px">
    <div style="margin-right:15px;"><%= link_to 'Edit', edit_article_path(@article), :class=>"btn btn-warning" %></div>
    <div style="margin-right:15px;"><%= link_to 'Delete', article_path(@article),
                  method: :delete,
                  data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></div>
    <div style="margin-right:15px;"><%= link_to 'Home', root_path(@article), :class=>"btn btn-dark" %></div>
  </div>
</div>
<!-- Form Show-->

<!-- Comments Show-->
<div class="card" style="padding 10px; margin:10px">
  <div class="card" style="margin: 5px 5px 0px 5px;">
    <p style="padding:5px">Comments</p>
    <%= render @article.comments %>
  </div>

  <div class="class row" style="padding 5px; margin:5px">
    <p style="padding:5px">Add a comment</p>
    <p><%= render 'comments/form' %></p>
  </div>
</div>
<!-- Comments Show-->