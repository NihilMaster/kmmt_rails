<%= form_with model: article do |form| %>

  <!-- Title AForm -->
  <div class="row g-3 align-items-center">
    <div class="col-auto">
      <label class="col-form-label"><%= form.label :title %></label>
    </div>
    <div class="col-auto">
      <%= form.text_field :title, :class =>'form-control' %>
    </div>
    <div class="col-auto">
      <% article.errors.full_messages_for(:title).each do |message| %>
        <span class="form-text"><%= message %></span>
      <% end %> 
    </div>
  </div>
  <!-- Title AForm-->

  <!-- Body AForm-->
  <div class="" style="margin-top:15px">
    <%= form.label :body %><br>
    <%= form.text_area :body, :class =>'form-control' %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <!-- Body AForm-->

  <!-- Select AForm-->
  <div style="padding: 15px; margin: 5px">
    <%= form.label :status %><br>
    <%= form.select :status, %w[public private archived], selected: 'public', :class => 'form-select'%>
  </div>
  <!-- Select AForm-->

  <!-- Update AForm-->
  <div style="display: flex; justify-content: flex-end; width: 100%;">
    <div style="margin:5px">
      <%= form.submit 'Accept', :class => 'btn btn-success'%>
    </div>
    <div style="margin:5px">
      <%= link_to 'Cancel', root_path(@article), :class => 'btn btn-dark' %>
    </div>
  </div>
  <!-- Update AForm-->
<% end %>